rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Users: authenticated users can read all profiles (needed for socios list); can only update their own or admin
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, list: if request.auth != null;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow delete: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Expenses: users can create their own or expenses for society (category: "sociedad")
    match /expenses/{docId} {
      allow create: if request.auth != null && (
        request.resource.data.uid == request.auth.uid || 
        request.resource.data.category == "sociedad"
      );
      allow read: if request.auth != null && (request.auth.uid == resource.data.uid || isAdmin());
      allow list: if request.auth != null;
      allow update, delete: if request.auth != null && (request.auth.uid == resource.data.uid || isAdmin());
    }

    // Products: all authenticated users can read, only admin can write
    match /products/{productId} {
      allow read, list: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    // Event Registrations: users can create and manage their own, all authenticated users can delete
    match /eventRegistrations/{registrationId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null && (request.auth.uid == resource.data.uid || isAdmin());
      allow list: if request.auth != null;
      allow update: if request.auth != null && (request.auth.uid == resource.data.uid || isAdmin());
      allow delete: if request.auth != null;
    }

    // Event Configs: all authenticated users can read and write
    match /eventConfigs/{eventType} {
      allow read, list: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }

    // Historial Resumenes: all authenticated users can read, only admin can write
    match /historial-resumenes/{docId} {
      allow read, list: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }
  }
}